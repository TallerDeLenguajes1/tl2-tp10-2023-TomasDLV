
@model tl2_tp10_2023_TomasDLV.ViewModels.ModificarTareaViewModel

<form asp-controller="Tarea" asp-action="editTask" method="post">
    <input type="hidden" asp-for="@Model.Id" />

    <div class="mb-3">
        <label class="form-label" asp-for="@Model.IdTablero"> </label>
        <input asp-for="@Model.IdTablero" class="form-control" />
        <span asp-validation-for="@Model.IdTablero" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="@Model.Nombre"> </label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado"></label>
        <select asp-for="@Model.Estado" class="form-control" id="estado">
            <option value="Ideas">Ideas</option>
            <option value="ToDo">ToDo</option>
            <option value="Doing">Doing</option>
            <option value="Review">Review</option>
            <option value="Done">Done</option>
        </select>
        <span asp-validation-for="@Model.Estado" class="text-danger"></span>
    </div>
   
    <div class="mb-3">
        <label class="form-label" asp-for="@Model.Descripcion"> </label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="@Model.Color"> </label>
        <input asp-for="@Model.Color" class="form-control" />
        
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="@Model.IdUsuarioAsignado"> </label>
        <input asp-for="@Model.IdUsuarioAsignado" class="form-control" />
    </div>

   

    <button class="btn btn-primary" type="submit">Guardar Cambios</button>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}