

@model tl2_tp10_2023_TomasDLV.ViewModels.CrearTareaViewModel
@{ 
    ViewData["Title"] = "Crear Tarea";
}



<h1>@ViewData["Title"]</h1>
<form asp-controller="Tarea" asp-action="createTask" method="post">
    
    <div class="form-group">
        <label asp-for="@Model.IdTablero"></label>
        <input asp-for="@Model.IdTablero" class="form-control" id="nombre" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" id="nombre" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado"></label>
        <input asp-for="@Model.Estado" class="form-control" id="nombre" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" id="nombre" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color"></label>
        <input asp-for="@Model.Color" class="form-control" id="nombre" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioAsignado"></label>
        <input asp-for="@Model.IdUsuarioAsignado" class="form-control" id="nombre" />
    </div>
    <button type="submit" class="btn btn-primary" >Enviar</button>
</form>