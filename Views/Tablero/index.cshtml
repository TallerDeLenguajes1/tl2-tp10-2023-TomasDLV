@model tl2_tp10_2023_TomasDLV.ViewModels.ListarTablerosViewModel;
@{
    ViewData["Title"] = "Index";
}

<h3>Boards</h3>

<div class="row mb-4">
    <div class="col-md-4 offset-md-4">
        <a asp-controller="Tablero" asp-action="createBoard" class="text-decoration-none">
            <div class="card bg-light text-center">
                <div class="card-body">
                    <h5 class="card-title">Create new board</h5>
                </div>
            </div>
        </a>
    </div>
</div>

<div class="row justify-content-center">
    @foreach (var t in Model.tableros)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@t.Nombre</h5>
                    
                    <div class="btn-group-vertical d-flex justify-content-center" role="group">
                        <a asp-controller="Tarea" asp-action="Index" asp-route-idBoard="@t.Id" class="btn btn-info mb-2">Ver</a>
                        <a asp-controller="Tablero" asp-action="editBoard" asp-route-idBoard="@t.Id" class="btn btn-success">Editar</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
