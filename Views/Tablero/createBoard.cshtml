
@model tl2_tp10_2023_TomasDLV.ViewModels.CrearTableroViewModel
@{ 
    ViewData["Title"] = "Crear Tablero";
}



<h1>@ViewData["Title"]</h1>
<form asp-controller="Tablero" asp-action="createBoard" method="post">
    <input hidden asp-for="@Model.IdUsuarioPropietario" class="form-control" id="nombre" />
    
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" id="nombre" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" id="nombre" />
    </div>
    <button type="submit" class="btn btn-primary" >Enviar</button>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}